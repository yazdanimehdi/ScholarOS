---
interface Props {
  title: string;
  viewAllHref?: string;
  viewAllText?: string;
}

const { title, viewAllHref, viewAllText = 'View all â†’' } = Astro.props;
---

<div class="flex items-baseline justify-between pb-2 border-b border-surface-200 dark:border-[#21262d]">
  <h2 class="text-xl font-serif font-normal text-surface-900 dark:text-[#e6edf3]">
    {title}
  </h2>
  {viewAllHref && (
    <a
      href={viewAllHref}
      class="text-sm text-primary-600 hover:text-primary-700 dark:text-accent-400 dark:hover:text-accent-300 transition-colors"
    >
      {viewAllText}
    </a>
  )}
</div>
