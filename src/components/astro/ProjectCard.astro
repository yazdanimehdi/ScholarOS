---
import { getStatusColor } from '../../lib/utils';

interface Props {
  id: string;
  title: string;
  type: string;
  status: string;
  excerpt?: string;
  tags?: string[];
  url?: string;
  repoUrl?: string;
}

const { id, title, type, status, excerpt, tags, url, repoUrl } = Astro.props;
---

<a href={`/projects/${id}`} class="block group py-4 border-b border-surface-100 dark:border-dm-border last:border-b-0">
  <div class="flex items-start justify-between gap-3 mb-1">
    <h3 class="font-medium text-surface-900 dark:text-dm-heading group-hover:text-primary-600 dark:group-hover:text-accent-400 transition-colors">
      {title}
    </h3>
    <div class="flex gap-2 shrink-0">
      <span class="text-xs text-surface-400 dark:text-dm-faint capitalize">{type}</span>
      <span class:list={[
        'text-xs capitalize',
        status === 'active' ? 'text-green-600 dark:text-green-400' : 'text-surface-400 dark:text-dm-faint'
      ]}>
        {status}
      </span>
    </div>
  </div>

  {excerpt && (
    <p class="text-sm text-surface-500 dark:text-dm-muted line-clamp-2 mb-2">{excerpt}</p>
  )}

  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-1.5">
      {tags.map(tag => (
        <span class="text-xs text-surface-400 dark:text-dm-faint">#{tag}</span>
      ))}
    </div>
  )}
</a>
