---
import { getSiteConfig } from '../../lib/config';

const config = getSiteConfig();
const topBar = config.topBar;

const show = topBar?.enabled ?? false;
---

{show && topBar && (
  <div class="w-full h-8 bg-primary-600 dark:bg-[#161b22] text-white dark:text-[#8b949e] text-xs">
    <div class="max-w-[930px] mx-auto px-4 sm:px-6 h-full flex items-center justify-between">
      <span class="hidden sm:inline truncate">{topBar.text}</span>
      {topBar.links?.length > 0 && (
        <div class="flex items-center gap-3 ms-auto">
          {topBar.links.map((link) => (
            <a
              href={link.href}
              class="text-white/90 dark:text-[#c9d1d9] hover:text-white dark:hover:text-white transition-colors whitespace-nowrap"
              {...(link.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
            >
              {link.label}
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
)}
