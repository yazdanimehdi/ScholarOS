---
import PageLayout from '../layouts/PageLayout.astro';
import { isPersonalMode } from '../lib/config';
import { getCollection } from 'astro:content';

const personal = isPersonalMode();

const talks = (await getCollection('talks')).sort((a, b) => {
  if (a.data.sortDate && b.data.sortDate) {
    return b.data.sortDate.getTime() - a.data.sortDate.getTime();
  }
  if (a.data.sortDate) return -1;
  if (b.data.sortDate) return 1;
  return 0;
});
---

<PageLayout title="Talks & Presentations" description={personal ? "Recent talks, invited lectures, and tutorials." : "Recent talks, presentations, and tutorials by our lab members."}>
  <h1 class="text-2xl sm:text-3xl font-serif font-normal text-surface-900 dark:text-dm-heading mb-2">Talks & Presentations</h1>
  <p class="text-sm text-surface-500 dark:text-dm-muted mb-6">
    {personal ? "Recent talks, invited lectures, and tutorials." : "Recent talks, invited lectures, and tutorials by our lab members."}
  </p>

  <div class="divide-y divide-surface-100 dark:divide-dm-border">
    {talks.map(talk => (
      <div class="py-4 first:pt-0">
        <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-2">
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <span class="text-xs text-surface-400 dark:text-dm-faint uppercase tracking-wide">
                {talk.data.type}
              </span>
            </div>
            <h3 class="text-base font-medium text-surface-900 dark:text-dm-heading mb-0.5">{talk.data.title}</h3>
            <p class="text-sm text-surface-500 dark:text-dm-muted">
              {talk.data.event}{talk.data.location && <> &middot; {talk.data.location}</>}
            </p>
            <p class="text-xs text-surface-400 dark:text-dm-faint mt-0.5">{talk.data.date}</p>
          </div>

          <div class="flex gap-2 shrink-0 text-xs">
            {talk.data.slidesUrl && (
              <a
                href={talk.data.slidesUrl}
                class="text-primary-600 dark:text-accent-400 hover:underline"
              >
                Slides
              </a>
            )}
            {talk.data.slidesUrl && talk.data.videoUrl && (
              <span class="text-surface-300 dark:text-dm-border-alt">|</span>
            )}
            {talk.data.videoUrl && (
              <a
                href={talk.data.videoUrl}
                class="text-primary-600 dark:text-accent-400 hover:underline"
              >
                Video
              </a>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>
</PageLayout>
