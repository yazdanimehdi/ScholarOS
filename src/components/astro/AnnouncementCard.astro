---
import { formatShortDate } from '../../lib/utils';

interface Props {
  id: string;
  title: string;
  date: Date;
  category: string;
  excerpt?: string;
  pinned?: boolean;
  image?: string;
  emoji?: string;
}

const { id, title, date, category, excerpt, pinned, image, emoji } = Astro.props;
---

<a href={`/news/${id}`} class="block group py-2" title={title}>
  <div class="flex items-start gap-2">
    {emoji ? (
      <span class="shrink-0 mt-0.5 w-7 h-7 flex items-center justify-center text-lg leading-none">{emoji}</span>
    ) : image ? (
      <img src={image} alt="" class="shrink-0 mt-0.5 w-7 h-7 rounded object-cover" loading="lazy" />
    ) : (
      <span class="news-bullet shrink-0 mt-1.5 text-sm"></span>
    )}
    <div class="min-w-0">
      <span class="text-sm font-medium text-surface-900 dark:text-dm-heading group-hover:text-primary-600 dark:group-hover:text-accent-400 transition-colors line-clamp-1">
        {title}
      </span>
      {pinned && (
        <span class="ms-1 text-xs text-primary-600 dark:text-accent-400">ðŸ“Œ</span>
      )}
      <div class="text-xs text-surface-500 dark:text-dm-muted mt-0.5">
        {formatShortDate(date)}
      </div>
    </div>
  </div>
</a>
