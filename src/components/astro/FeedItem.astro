---
interface Props {
  title: string;
  link: string;
  date: string;
  source: string;
  excerpt?: string;
  author?: string;
}

const { title, link, date, source, excerpt, author } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="block group py-3 border-b border-surface-100 dark:border-[#21262d] last:border-b-0">
  <div class="flex items-start gap-4">
    <!-- Thumbnail placeholder -->
    <div class="hidden sm:block w-20 h-16 shrink-0 rounded bg-surface-100 dark:bg-[#161b22] overflow-hidden">
      <div class="w-full h-full flex items-center justify-center text-surface-300 dark:text-[#30363d]">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m9.86-2.813a4.5 4.5 0 00-6.364-6.364L4.5 8.25" />
        </svg>
      </div>
    </div>

    <div class="flex-1 min-w-0">
      <h3 class="text-sm font-medium text-surface-900 dark:text-[#e6edf3] group-hover:text-primary-600 dark:group-hover:text-accent-400 transition-colors leading-snug">
        {title}
        <svg class="inline w-3 h-3 ms-0.5 text-surface-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
      </h3>
      {excerpt && (
        <p class="text-xs text-surface-500 dark:text-[#8b949e] mt-1 line-clamp-2">{excerpt}</p>
      )}
      <div class="flex items-center gap-2 mt-1 text-xs text-surface-400 dark:text-[#484f58]">
        <span>{source}</span>
        <span>&middot;</span>
        <span>{date}</span>
      </div>
    </div>
  </div>
</a>
